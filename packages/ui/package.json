{
	"name": "@repo/ui",
	"version": "0.0.0",
	"sideEffects": [
		"**/*.css"
	],
	"license": "MIT",
	"exports": {
		"./styles": "./css/output.css",
		"./button": {
			"types": "./dist/button",
			"import": "./dist/button/button.mjs",
			"require": "./dist/button/button.js"
		},
		"./input": {
			"types": "./dist/input",
			"import": "./dist/input/input.mjs",
			"require": "./dist/input/input.js"
		},
		"./accordion": {
			"types": "./dist/accordion",
			"import": "./dist/accordion/accordion.mjs",
			"require": "./dist/accordion/accordion.js"
		}
	},
	"scripts": {
		"build": "tsup",
		"dev": "tsup --watch",
		"lint": "eslint . --max-warnings 0",
		"clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
		"tailwind:build": "tailwindcss -i ./src/styles.css -o ./css/output.css",
		"tailwind:watch": "tailwindcss -i ./src/styles.css -o ./css/output.css --watch"
	},
	"devDependencies": {
		"@repo/eslint-config": "workspace:*",
		"@repo/tailwind-config": "workspace:*",
		"@repo/typescript-config": "workspace:*",
		"@testing-library/dom": "^10.4.0",
		"@testing-library/jest-dom": "^6.5.0",
		"@testing-library/react": "^16.0.1",
		"@testing-library/user-event": "^14.5.2",
		"@types/jest": "^29.5.13",
		"@types/react": "^18.3.2",
		"@types/react-dom": "^18.3.0",
		"@vitejs/plugin-react": "^4.2.1",
		"autoprefixer": "^10.4.18",
		"eslint": "^8.57.0",
		"jsdom": "^25.0.0",
		"postcss": "^8.4.35",
		"tailwindcss": "^3.4.1",
		"ts-node": "^10.9.2",
		"tsup": "^8.0.2",
		"typescript": "^5.3.3",
		"vite": "^5.1.4",
		"vitest": "^2.1.1"
	},
	"dependencies": {
		"@radix-ui/react-accordion": "^1.2.0",
		"class-variance-authority": "^0.7.0",
		"classnames": "^2.5.1",
		"lucide-react": "^0.441.0",
		"react": "^18.2.0",
		"tailwind-merge": "^2.5.2"
	},
	"publishConfig": {
		"access": "public"
	}
}

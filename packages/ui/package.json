{
	"name": "@repo/ui",
	"version": "0.0.0",
	"sideEffects": [
		"**/*.css"
	],
	"license": "MIT",
	"exports": {
		"./styles": "./dist/output.css",
		"./button": {
			"types": "./src/button.tsx",
			"import": "./dist/button.mjs",
			"require": "./dist/button.js"
		}
	},
	"scripts": {
		"build": "tsup",
		"dev": "tsup --watch",
		"lint": "eslint . --max-warnings 0",
		"clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
		"tailwind:build": "tailwindcss -i ./src/styles.css -o ./dist/output.css",
        "tailwind:watch": "tailwindcss -i ./src/styles.css -o ./dist/output.css --watch"
	},
	"devDependencies": {
		"@repo/eslint-config": "workspace:*",
		"@repo/tailwind-config": "workspace:*",
		"@types/react": "^18.2.61",
		"@types/react-dom": "^18.2.19",
		"eslint": "^8.57.0",
		"@repo/typescript-config": "workspace:*",
		"tsup": "^8.0.2",
		"typescript": "^5.3.3",
		"autoprefixer": "^10.4.18",
		"postcss": "^8.4.35",
		"tailwindcss": "^3.4.1"
	},
	"dependencies": {
		"react": "^18.2.0"
	},
	"publishConfig": {
		"access": "public"
	}
}
